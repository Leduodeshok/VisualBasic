Option Explicit
Private Sub Exo1()

Dim n%
Dim m%
Dim O%
Dim af$
Dim ta$

n = CInt(InputBox("Saisir N", "Saisie"))
m = CInt(InputBox("Saisir M", "Saisie"))
O = CInt(InputBox("Saisir O", "Saisie"))


af = " Le resultat en binaire de N est : " & Application.WorksheetFunction.Dec2Bin(n) & vbCr & _
"Le resultat en binaire de M est : " & Application.WorksheetFunction.Dec2Bin(m) & vbCr & _
"le resultat en octal de O est : " & Application.WorksheetFunction.Dec2Oct(O) & " et en Hexa : " & Application.WorksheetFunction.Dec2Hex(O)


Call MsgBox(af, vbInformation, "Resultat de l'operation")


End Sub

