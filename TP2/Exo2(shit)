Option Explicit
Private Sub exo3()

Dim m%
Dim af$
Dim res&(100)
Dim i%

m = CInt(InputBox("Saisir m positif pls", "resultat"))


For i% = 0 To m Step 1
    res(i) = i ^ 2%
Next

af = "Les cubes :"

For i% = 0 To m Step 1
    af = af & vbCr & i & "^2 = " & res(i)
Next

Call MsgBox(af, vbInformation, "les carr√©s")

End Sub

