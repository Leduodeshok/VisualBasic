Option Explicit
Private Sub Exo6()

Dim n%
Dim res&(100)
Dim ha%
Dim af$
Dim i&

Do
res(0) = 1

Do
    n = CInt(InputBox("saisir n positif ", "saisie"))
Loop While Not (n > 0)

For i = 1 To n Step 1
    res(i) = res(i - 1) * i
Next

af = " les fact : " & vbCr & "0! = 1"

For i = 1 To n Step 1
    af = af & vbCr & i & "! = " & res(i)
Next

Call MsgBox(af, vbInformation, " resultat ")
 
ha = MsgBox("recommencez ?", vbYesNo)

Loop While Not (ha = 7)

End Sub
